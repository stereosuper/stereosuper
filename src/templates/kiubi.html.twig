{% extends 'layout/portfolio.html.twig' %}

{# The portfolio_slug should be the same used in sass variable and to name all the images #}
{% block portfolio_slug %}kiubi{% endblock %}

{# Meta #}
{% block portfolio_title %}Kiubi{% endblock %}
{% block description %}{% endblock %}

{# Content #}
{% block portfolio_text %}
    <p></p>
{% endblock %}

{% block portfolio_role %}
    <p></p>
    <ul class='skills'>
        <li class='skill' data-skill='strategy'>
            <div class='symbol'>
                <div class='list-symbols dashes hoverAnimation'>
                    <span></span><span></span><span></span><span></span><span></span><span></span><span></span><span></span><span></span><span></span><span></span>
                </div>
            </div>
            Stratégie d'image
        </li><li class='skill' data-skill='identity'>
            <div class='symbol'>
                <div class='wrapper-waves hoverAnimation'>
